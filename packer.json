{
  "variables": {
    "aws_access_key": "{{env `AWS_ACCESS_KEY_ID`}}",
    "aws_secret_key": "{{env `AWS_SECRET_ACCESS_KEY`}}",
    "aws_token": "{{env `AWS_SESSION_TOKEN`}}",
    "aws_accounts": "{{env `AWS_ACCOUNTS`}}"
  },
  "builders": [{
    "type": "amazon-ebs",
    "access_key": "{{user `aws_access_key`}}",
    "secret_key": "{{user `aws_secret_key`}}",
    "token": "{{user `aws_token`}}",
    "region": "us-east-1",
    "source_ami": "ami-36a0ba5e",
    "instance_type": "t2.micro",
    "ssh_username": "ubuntu",
    "ami_name": "holocron-api-stage {{timestamp}}",
    "ami_users": [
      "931760913896",
      "821271623613"
    ]
 
  }],
  "provisioners": [
    {
      "type": "shell",
      "inline": [
        "sleep 30",
        "mkdir /tmp/holocron-api"
      ]
    },
    {
      "type": "file",
      "source": "/packer/app/",
      "destination": "/tmp/holocron-api"
    },
    {
      "type": "shell",
      "inline": [
        "sudo apt-get -y install software-properties-common",
        "sudo apt-add-repository -y ppa:ansible/ansible",
        "sudo apt-get -y update",
        "sudo apt-get -y install ansible",
        "sudo mkdir /holocron-api",
        "sudo mv /tmp/holocron-api/* /holocron-api/"
      ]
    },
    {
      "type": "ansible-local",
      "playbook_file": "ansible/localhost/atlas.yml",
      "role_paths": [
        "ansible/localhost/base",
        "ansible/localhost/django"
      ]
    }
  ],
  "push": {
    "name": "carbonite/holocron-api-build"
  },
  "post-processors": [
    {
      "type": "atlas",
      "artifact": "carbonite/holocron-api-ami",
      "artifact_type": "aws.ami"
    }
  ]
}

